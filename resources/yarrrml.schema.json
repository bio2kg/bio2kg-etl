{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://rml.io/yarrrml/schema",
    "title": "YARRRML",
    "description": "A YARRRML document",
    "type": "object",
    "properties": {
      "prefixes": {
        "type": "object"
      },
      "authors": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "targets": {
        "type": "object",
        "items": {
          "anyOf": [{
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "maxItems": 2
        }]}
      },
      "sources": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "$ref": "#/$defs/source"
          }
        }
      },
      "mappings": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "properties": {
              "po": {
                "$ref": "#/$defs/predicateobjects"
              },
              "predicateobjects": {
                "$ref": "#/$defs/predicateobjects"
              },
              "s": {
                "$ref": "#/$defs/subjects"
              },
              "subjects": {
                "$ref": "#/$defs/subjects"
              },
              "sources": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/source"
                }
              }
            }
          }
        },
        "minProperties": 1,
        "additionalProperties": false
      }
    },
    "required": [
      "mappings"
    ],
    "$defs": {
      "function": {
        "type": "object",
        "properties": {
          "function": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "language": {
            "type": "string"
          },
          "parameters": {
            "type": "array",
            "items": {
              "anyOf": [{
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 2,
                "maxItems": 2
              }, {
                "type": "object",
                "properties": {
                  "parameter": {
                    "type": "string"
                  },
                  "value": {
                    "anyOf": [{
                      "type": "string"
                    }, {
                      "$ref": "#/$defs/function"
                    }]
                  },
                  "type": {
                    "type": "string"
                  },
                  "from": {
                    "type": "string"
                  }
                }
              }],
              "required": [
                "parameter",
                "value"
              ]
            }
          }
        },
        "required": ["function"]
      },
      "source": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "access": {
                "type": "string"
              },
              "referenceFormulation": {
                "type": "string"
              },
              "iterator": {
                "type": "string"
              }
            },
            "required": [
              "access",
              "referenceFormulation"
            ]
          },
          {
            "type": "object",
            "properties": {
              "table": {
                "type": "string"
              },
              "queryFormulation": {
                "type": "string"
              },
              "query": {
                "type": "string"
              }
            },
            "oneOf": [
              {
                "required": [
                  "table"
                ]
              },
              {
                "required": [
                  "query"
                ]
              }
            ]
          },
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "maxItems": 3
          }
        ]
      },
      "predicateobjects": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "p": {
                  "$ref": "#/$defs/objects"
                },
                "predicates": {
                  "$ref": "#/$defs/objects"
                },
                "o": {
                  "$ref": "#/$defs/objects"
                },
                "objects": {
                  "$ref": "#/$defs/objects"
                }
              }
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 2,
              "maxItems": 3
            }
          ]
        }
      },
      "subjects": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "$ref": "#/$defs/function"
          }
        ]
      },
      "objects": {
        "anyOf": [
          {
            "$ref": "#/$defs/function"
          },
          {
            "type": "string"
          }, 
          {
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "datatype": {
                "type": "string"
              },
              "language": {
                "type": "string"
              }
            },
            "required": ["value", "type"]
          },
          {
            "type": "object",
            "properties": {
              "mapping": {
                "type": "string"
              },
              "conditions": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/function"
                }
              }
            },
            "required": ["mapping"]
          },
          {
            "type": "object",
            "items": {
              "anyOf": [
                {
                  "$ref": "#/$defs/function"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "blank"
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "datatype": {
                      "type": "string"
                    },
                    "language": {
                      "type": "string"
                    }
                  },
                  "required": ["value", "type"]
                },
                {
                  "type": "object",
                  "properties": {
                    "mapping": {
                      "type": "string"
                    },
                    "conditions": {
                      "type": "array",
                      "items": {
                        "$ref": "#/$defs/function"
                      }
                    }
                  },
                  "required": ["mapping"]
                }
              ]
            },
            "minItems": 1
          }
        ]
      }
    }
  }
  